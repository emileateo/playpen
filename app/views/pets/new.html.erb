<div class="container mt-4">
  <h1>Tell us about your dog!</h1>

  <div class="create_pet_form" >
    <%= simple_form_for [@pet ] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :temperament %>
        <%= f.input :breed %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Join the Pack!' %>
    <% end %>
  </div>
  <div class="link mt-3">
    <%= link_to "Back to home", root_path %>
  </div>
</div>
